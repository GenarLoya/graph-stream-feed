{
  "workspace": ["./server", "./frontend", "./types"],
  "tasks": {
    "spino": "deno --allow-read --allow-run jsr:@rsm-hcd/spino",
    "dev": "deno task spino dev"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@rsm-hcd/spino": "jsr:@rsm-hcd/spino@^0.4.0",
    "./types": "./types"
  }
}
